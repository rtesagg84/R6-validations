<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.full_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= button_to 'Show', customer_path(:id => customer.id), class:"btn btn-primary", method: :get %></td>
        <td><%= button_to 'Edit', edit_customer_path(:id => customer.id), class:"btn btn-primary", method: :get %></td>
        <td><%= link_to 'Destroy',  customer_path(:id => customer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

